   "source": [
    "import turtle as t\n",
    "\n",
    "t.bgcolor(\"black\")    # 배경색\n",
    "t.speed(0)\n",
    "\n",
    "for x in range(200):\n",
    "  if x%3 == 0:\n",
    "    t.color(\"red\")\n",
    "  if x%3 == 1:\n",
    "    t.color(\"yellow\")\n",
    "  if x%3 == 2:\n",
    "    t.color(\"blue\")\n",
    "    \n",
    "  t.forward(x*2)      # 반복하면서 선이 점차적으로 길어짐\n",
    "  t.left(119)         # 119도 왼쪽으로 회전\n",
    "\n",
    "t.mainloop()"
   ]
